{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
  // Provide global test/runtime types for monorepo (jest & node). Individual packages can still narrow via their own tsconfig.
  "types": ["node", "jest"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@api-factory/core": ["packages/core/src", "packages/core/dist"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "files": ["types/global-shims.d.ts"]
}
