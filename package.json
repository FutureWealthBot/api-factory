{
  "name": "api-factory",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.9.0",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "PORT=8787 API_PORT=8787 concurrently -n CLI,WEB -c auto \"pnpm --filter api-cli dev\" \"pnpm --filter admin-web dev\"",
    "build": "pnpm -r build",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
  "doctor": "node scripts/af-doctor.cjs",
  "labels:create": "node ./scripts/create-labels.mjs",
    "typecheck:web": "tsc -p tsconfig.web.json --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
  "@types/jest": "^30.0.0",
    
  "@types/node": "^24.3.1",
  "@types/mime": "^1.3.5",
  "@types/jsonwebtoken": "^9.0.10",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/session": "11.1.0",
    "@fastify/static": "8.2.0",
  "@supabase/supabase-js": "^2.27.0",
    "@types/jsonwebtoken": "^9.0.10",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "siwe": "^3",
    "uuid": "^12.0.0"
  },
  "pnpm": {
    "overrides": {
      "fastify": "5.6.0"
    }
  }
}